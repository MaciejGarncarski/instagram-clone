generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model profiles {
  id         String  @id @db.Uuid
  profile_id Int     @unique @default(autoincrement()) @db.SmallInt
  username   String? @unique
  avatar_url String?
  website    String?
  bio        String? @db.VarChar
}

model posts {
  id         String @id @unique @default(uuid()) @db.Uuid
  avatar_url String?
  likes      Int?
  author     String @db.Uuid     
}